<UserControl x:Class="CruPhysics.PhysicalObjects.Views.MotionTrailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:physicalObjects="clr-namespace:CruPhysics.PhysicalObjects"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance physicalObjects:MotionTrail}">
    <Path Data="{Binding Geometry}" StrokeThickness="{Binding StrokeThickness}">
        <Path.Stroke>
            <SolidColorBrush Color="{Binding Color}"/>
        </Path.Stroke>
    </Path>
</UserControl>
