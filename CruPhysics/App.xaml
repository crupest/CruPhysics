<Application x:Class="CruPhysics.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CruPhysics"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ContextMenu x:Key="PhysicalObjectContextMenu">
            <MenuItem Command="local:MainWindow.Delete"></MenuItem>
            <MenuItem Command="local:MainWindow.Property"></MenuItem>
        </ContextMenu>
        
        <Style x:Key="textbox" TargetType="TextBox">
            <Style.Setters>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="3"/>
                <Setter Property="Height" Value="Auto"/>
            </Style.Setters>
        </Style>

        <Style x:Key="AutoBorder" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Cursor" Value="Arrow"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Cursor" Value="IBeam"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>
