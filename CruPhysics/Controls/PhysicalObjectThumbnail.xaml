<UserControl x:Class="CruPhysics.Controls.PhysicalObjectThumbnail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CruPhysics.Controls"
             mc:Ignorable="d">
    <Rectangle>
        <Rectangle.Fill>
            <VisualBrush Visual="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=Object.Shape.Raw}"
                         TileMode="None" Stretch="Uniform"/>
        </Rectangle.Fill>
    </Rectangle>
</UserControl>
